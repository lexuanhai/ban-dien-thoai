@{
    ViewData["Title"] = "AddView";
    Layout = null;
}
<style>
    .required {
        color: #f00;
    }

    input.error {
        border-color: #f00 !important;
    }

    label.error {
        clear: both;
        color: #f00;
        display: block;
        text-align: left;
        margin: unset;
        padding: unset;
        font-size: 15px;
        font-weight: unset !important;
        background: unset;
    }

    .box-image {
        width: 150px;
        height: 120px;
        background: url('/image-default/default.png');
        background-position: center;
        background-repeat: unset;
        background-size: cover;
        border-radius: 4px;
        margin-top: 10px;
        cursor: pointer;
        float: left;
        margin-right: 10px;
        /*display: none;*/
    }
    .remove-image{
        float: right;
        height: 20px;
        width: 20px;
        background: #ddd;
        border-radius: 50%;
        text-align: center;
        font-size: 14px;
        margin: 5px 5px 0px 0px;
    }
</style>

<div class="page-heading product-update" style="display:none">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3 class="product-title">Cập nhật sản phẩm</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="https://hieutao.com/admin">Dashboard</a></li>
                        <li aria-current="page" class="breadcrumb-item active product-title">Cập nhật sản phẩm</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section id="basic-vertical-layouts">
        <div class="row match-height">
            <div>
                <!---->
                <div class="snotify snotify-left_top"></div>
                <div class="snotify snotify-left_center"></div>
                <div class="snotify snotify-left_bottom"></div>
                <div class="snotify snotify-right_top"></div>
                <div class="snotify snotify-right_center"></div>
                <div class="snotify snotify-right_bottom"></div>
                <div class="snotify snotify-center_top"></div>
                <div class="snotify snotify-center_center"></div>
                <div class="snotify snotify-center_bottom"></div>
            </div>
            <div class="col-md-12 col-12">
                 <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <form class="form form-vertical" id="form-submit" action="#">
                                <div class="form-body">
                                    <div class="row">
                                        <div class="col-12 mb-2">
                                            <div class="">
                                                <label for="first-name-vertical">Tên sản phẩm <span class="required">(*)</span></label>
                                                <input type="text" id="productname" name="productname" placeholder="Tên sản phẩm" class=" form-control"> <!---->
                                                <label id="phone_number-error" class="error productname-exist" for="productname" style="display: none;">Tên sản phẩm đã tồn tại</label>
                                            </div>
                                        </div>
                                      
                                    </div>
                                    <div class="row">
                                          <div class="col-4 mb-2">
                                            <div class="form-group">
                                                <label for="productcategoryid">Danh mục sản phẩm <span class="required">(*)</span></label>
                                                <select name="productcategoryid" id="productcategoryid" class="form-select">
                                                    
                                                </select>
                                                <!---->
                                            </div>
                                        </div>
                                        <div class="col-4 mb-2">
                                            <div class="form-group">
                                                <label for="producttrademark">Hãng sản xuất <span class="required">(*)</span></label>
                                                <select name="producttrademark" id="producttrademark" class="form-select">
                                                    <option value="" selected="selected" disabled="disabled">Chọn hãng sản xuất</option>
                                                    <option value="4">
                                                        AirPod
                                                    </option>
                                                </select>
                                                <!---->
                                            </div>
                                        </div>
                                           <div class="col-4 mb-2">
                                            <div class="form-group">
                                                <label for="productcategoryid">Trạng thái <span class="required">(*)</span></label>
                                                <select name="productcategoryid" id="productstatus" class="form-select">
                                                    <option value="" selected="selected" disabled="disabled">Chọn trạng thái</option>
                                                    <option value="1"> Sản phẩm mới</option>
                                                    <option value="2"> Bán chạy</option>
                                                    <option value="3"> Nổi bật</option>
                                                    <option value="4">Khác</option>
                                                </select>
                                                <!---->
                                            </div>
                                        </div>
                                    </div>                                    
                                    <div class="row">
                                        <div class="col-4 mb-2">
                                            <div class="form-group">
                                                <label for="percent_price"> Phần trăm giá giảm </label>
                                                <div class="" style="position: relative;">
                                                    <input type="number" min="0" max="100"  name="percent_price" id="percent_price" class="form-control">                                                  
                                                </div>
                                                <!---->
                                            </div>
                                        </div>
                                        <div class="col-4 mb-2">
                                            <div class="form-group">
                                                <label for="insurance">Bảo hành <span class="required">(*)</span></label>
                                                <div class="" style="position: relative;">
                                                    <input type="text"  name="insurance" id="insurance" class="form-control">                                                    
                                                </div>
                                                <!---->
                                            </div>                                          
                                        </div>
                                        <div class="col-4 mb-2">
                                            <div class="form-group">
                                                <label for="commodities">Loại hàng hóa <span class="required">(*)</span></label>
                                                <select name="commodities" id="commodities" class="form-select">
                                                    <option value="" selected="selected" disabled="disabled">Chọn loại hàng hóa</option>
                                                    <option value="1"> Chính hãng</option>
                                                    <option value="2"> Máy test 99%</option>
                                                    <option value="3"> Máy cũ trên 95%</option>
                                                    <option value="4"> Máy cũ 60-80% </option>
                                                </select>
                                                <!---->
                                            </div>
                                        </div>
                                    </div>
                                     <div class="row">
                                        <div class="col-12 mb-2">
                                            <div class="form-group product-images">
                                                <label style="display: block">Hình ảnh</label>
                                                <input type="file" id="productimages" name="productimages" class="form-control filesImages" multiple style="display:none"> <!----> <!---->
                                                <label class="box-image" for="productimages"></label>   
                                                <div class="productimages"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label for="contact-info-vertical">Khuyến mãi</label>
                                                <div class="ckeditor">
                                                    <textarea name="promotion" id="promotion" rows="6" placeholder="Mô tả chi tiết khuyễn mãi"></textarea>
                                                </div>
                                                <!---->
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-12">
                                            <div class="form-group">
                                                <label for="contact-info-vertical">Mô tả <span class="required">(*)</span></label>
                                                <div class="ckeditor">
                                                    <textarea name="productdescription" id="productdescription" rows="15" placeholder="Mô tả chi tiết sản phẩm"></textarea>
                                                </div>
                                                <!---->
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                         <div class="col-12 d-flex justify-content-end"><button type="submit" class="btn btn-primary me-1 mb-1">Cập nhật</button></div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
@section Scripts{
    <script src="~/admin/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/admin/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/admin/product/product.js?v=@DateTime.Now.Ticks"></script>
    }